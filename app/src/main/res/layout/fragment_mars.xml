<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.eliseylobanov.acrosstheuniverse.ui.mars.MarsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/padding_main"
        android:paddingEnd="@dimen/padding_main"
        tools:context=".ui.earth.EarthFragment">

        <TextView
            android:id="@+id/marsDate"
            style="@style/AcrossTheUniverse.TextView.Header"
            android:text="@{viewModel.mars.photos.get(0).earth_date}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/image_Mars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_vertical"
            app:cardCornerRadius="@dimen/corner_radius"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/marsDate">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/photo_of_the_day_stub"
                app:imageUrl="@{viewModel.marsUrl}"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/roverName"
            style="@style/AcrossTheUniverse.TextView"
            android:text="@{viewModel.mars.photos.get(0).rover.name}"
            app:layout_constraintStart_toStartOf="@+id/image_Mars"
            app:layout_constraintTop_toBottomOf="@+id/image_Mars" />

        <TextView
            android:id="@+id/cameraName"
            style="@style/AcrossTheUniverse.TextView"
            android:text="@{viewModel.mars.photos.get(0).camera.full_name}"
            app:layout_constraintStart_toStartOf="@+id/roverName"
            app:layout_constraintTop_toBottomOf="@+id/roverName" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
